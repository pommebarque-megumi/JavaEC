package day1;

public class Wand {
	String name;
	double power;

	public String getName() {
		return this.name;
	}
	public double getPower() {
		return this.power;
	}

	public void setName(String name) {
		if(name!=null) {
		this.name=name;
		}else {
			throw new IllegalArgumentException
			("名前がnullです。処理を中断。");
		}
	}
	public void setPower(double power) {
		this.power=power;
	}
}
