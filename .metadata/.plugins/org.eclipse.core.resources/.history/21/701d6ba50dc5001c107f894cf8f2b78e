package day1;

public class Wizard {
	private String name;
	private int hp;
	private int mp;
	private Wand wand;

	public String getName() {
		return this.name;
	}
	public int getHp() {
		return this.hp;
	}
	public int getMp() {
		return this.mp;
	}
	public void setName() {
		if(name!=null) {
			this.name=name;
		}else {
			throw new IllegalArgumentException
			("名前がnullです。処理を中断。");
		}
	}
		public void setHp() {
			this.hp=hp;
		}
		public void setMp() {
			this.mp=mp;
		}
		public void heal(Hero h) {
			int basePoint =10;
			int recoverPoint =(int)(basePoint*this.wand.power);
			h.setHp(h.getHp() + recoverPoint);
			System.out.println(h.getName+"のHPを"+recoverPoint+"回復した");
		}
}
